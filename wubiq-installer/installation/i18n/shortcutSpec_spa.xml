<shortcuts>
    <programGroup 
        defaultName="Wubiq" 
        iconFile="${INSTALL_PATH}\icons\wubiq.ico"
        location="applications"/>
    
    <shortcut
        name="Configurar Servicio Wubiq" 
        description="Configurar Servicio Wubiq"
        target="${JAVA_HOME}\bin\javaw"
        commandLine='-cp "${INSTALL_PATH}\bin" -splash:splash.png net.sf.wubiq.clients.WubiqConfigurator'
        workingDirectory="${INSTALL_PATH}\bin"
        iconFile="${INSTALL_PATH}\icons\wubiq.ico"
        initialState="noShow"
        programGroup="yes"
        applications="no"
        desktop="no"
        startMenu="no"
        startup="no"
        />
    <shortcut
        name="Detener Servicio Wubiq"
        description="Detiene el servicio Wubiq"
        target="net"
        commandLine="stop wubiq"
        workingDirectory="${INSTALL_PATH}"
        iconFile="${INSTALL_PATH}\icons\stop.ico"
        initialState="noShow"
        programGroup="yes"
        applications="no"
        desktop="no"
        startMenu="no"
        startup="no"
         />    
    
	<shortcut
        name="Iniciar Servicio Wubiq"
        description="Inicia el servicio de Wubiq"
        target="net"
        commandLine="start wubiq"
        workingDirectory="${INSTALL_PATH}"
        iconFile="${INSTALL_PATH}\icons\start.ico"
        initialState="noShow"
        programGroup="yes"
        applications="no"
        desktop="no"
        startMenu="no"
        startup="no"
	/>
    
    <shortcut
        name="Desinstalar Servicio Wubiq"
        description="Desinstalar servicio Wubiq"
        target="${JAVA_HOME}\bin\javaw"
        commandLine="-jar uninstaller.jar"
        workingDirectory="${INSTALL_PATH}\Uninstaller"
        iconFile="${INSTALL_PATH}\icons\wubiq_uninstall.ico"
        initialState="noShow"
        programGroup="yes"
        applications="no"
        desktop="no"
        startMenu="no"
        startup="no"
        />
</shortcuts>